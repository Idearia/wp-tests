{
    "name": "idearia/wp-tests",
    "description": "A simple class to do PHPUnit tests in WordPress.",
    "keywords": ["tests", "WordPress", "phpunit"],
    "type": "library",
    "license": "GPL-3.0-or-later",
    "homepage": "https://github.com/Idearia/wp-tests",
    "scripts": {
        "test": [
            "phpunit --testdox"
        ]
    },
    "autoload": {
        "psr-4": {
            "Idearia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Idearia\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
